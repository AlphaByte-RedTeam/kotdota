<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kotdota" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tabasco</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/ghost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/woodsmoke</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash screen theme. -->
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">750</item>
        <item name="windowSplashScreenBackground">@color/woodsmoke</item>
        <item name="postSplashScreenTheme">@style/Theme.Kotdota</item>
    </style>
</resources>