<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_gradient_background"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".TeamDetailsActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/txt_collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Collection title"
        android:textColor="@color/ghost_white"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/txt_collection_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Collection description"
        android:textColor="@color/ghost_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/bg_hero_card"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/hero_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hero" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <TextView
                android:id="@+id/txt_hero_name1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text="Hero name"
                android:textColor="@color/ghost_white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/bg_hero_card"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/hero_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hero" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <TextView
                android:id="@+id/txt_hero_name2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text="Hero name"
                android:textColor="@color/ghost_white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/bg_hero_card"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/hero_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hero" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <TextView
                android:id="@+id/txt_hero_name3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text="Hero name"
                android:textColor="@color/ghost_white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/bg_hero_card"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/hero_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hero" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <TextView
                android:id="@+id/txt_hero_name4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text="Hero name"
                android:textColor="@color/ghost_white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/bg_hero_card"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/hero_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hero" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <TextView
                android:id="@+id/txt_hero_name1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text="Hero name"
                android:textColor="@color/ghost_white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>